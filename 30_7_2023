// Code Wars

// 1 Friend of Foe? 7kyu
// return the name if the name is four characters

function friend(friends){
   return friends.filter(name => name.length === 4)
}

// 2 Grasshopper - Check for factor 8kyu
// Return true if it's a factor and false if its not

function checkForFactor (base, factor) {
    if (base % factor === 0){
        return true
    } return false
  }
   // OR
  return base % factor === 0;

 // 3 Messi goals function 8 kyu
 // return his total numbers of goals in all three leagues

 function goals (laLigaGoals, copaDelReyGoals, championsLeagueGoals) {
    return laLigaGoals + copaDelReyGoals + championsLeagueGoals
  }

// 4 Rock Paper Scissors 8kyu
// return which player won! in case of draw return Draw!

const rps = (p1, p2) => {
    if((p1 === 'rock' && p2 === 'scissors') || (p1 === 'paper' && p2 === 'rock') || (p1 === 'scissors' && p2 === 'paper')){
        return "Player 1 won!"
    } else if((p1 === 'rock' && p2 === 'paper') || (p1 === 'paper' && p2 === 'scissors') || (p1 === 'scissors' && p2 === 'rock')){
        return "Player 2 won!"
    } else {
        return 'Draw!'
    }
};

// OR

const rps = (p1, p2) => {
    if (p1 === p2) return "Draw!";
    var rules = {rock: "scissors", paper: "rock", scissors: "paper"};

// var rules = {rock: "scissors", paper: "rock", scissors: "paper"};
// This line initializes an object called rules. This object maps each possible choice (rock, paper, and scissors) to the choice it can defeat in the game. For example, rules['rock'] is "scissors", rules['paper'] is "rock", and rules['scissors'] is "paper". This sets up the logic to determine the winner based on the choices made.

    if (p2 === rules[p1]) {
      return "Player 1 won!";
    }
    else {
      return "Player 2 won!";
    }
  };